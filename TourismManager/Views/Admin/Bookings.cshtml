@model IEnumerable<TourismManager.Web.Models.Booking>
@{
    ViewData["Title"] = "All Bookings";
}

<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-primary">Manage Bookings</h2>

    <div class="table-responsive shadow-sm rounded bg-white p-3">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Package</th>
                    <th>Travel Date</th>
                    <th>Persons</th>
                    <th>Total</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@(b.Package?.Title ?? "N/A")</td>
                        <td>@b.TravelDate.ToString("dd MMM yyyy")</td>
                        <td>@b.Persons</td>
                        <td class="fw-semibold">₹ @b.TotalAmount</td>
                        <td>
                            @if (b.IsCancelled)
                            {
                                <span class="badge bg-danger">Cancelled</span>
                            }
                            else if (b.Status == "Paid" || b.Status == "Confirmed")
                            {
                                <span class="badge bg-success">@b.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@b.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .table-responsive {
        transition: transform 0.2s ease-in-out;
    }

        .table-responsive:hover {
            transform: scale(1.01);
        }

    .badge {
        font-size: 0.9rem;
        font-weight: 600;
    }

    .fw-semibold {
        font-weight: 600;
    }
</style>
