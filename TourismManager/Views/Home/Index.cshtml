@model IEnumerable<TourismManager.Web.Models.Package>
@{
    ViewData["Title"] = "Explore Packages";
}
<div class="container py-4">
    <h2 class="text-center mb-4 fw-bold text-primary">Explore Packages</h2>
    <div class="row g-4">
        @foreach (var p in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card shadow-sm border-0 rounded-3 h-100 package-card">
                    <img class="card-img-top rounded-top-3"
                         src="@(!string.IsNullOrEmpty(p.ImageFileName)
                                                                               ? Url.Content($"~/images/{p.ImageFileName}")
                                                                               : Url.Content("~/images/placeholder.jpg"))"
                     alt="@p.Title" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@p.Title</h5>
                    <p class="card-text text-muted small mb-1">
                        <i class="bi bi-geo-alt-fill text-primary"></i> @p.Location
                        • @p.Days D / @p.Nights N
                    </p>
                    <p class="fw-bold fs-5 mb-3 text-success">₹ @p.Price</p>
                    <div class="mt-auto d-flex gap-2">
                        <a class="btn btn-outline-primary w-50 shadow-sm" href="/Packages/Details/@p.Id">
                            Details
                        </a>
                        <a class="btn btn-primary w-50 shadow-sm" href="/Bookings/Create?packageId=@p.Id">
                            Book Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
                }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .package-card {
        transition: transform 0.3s ease-in-out;
    }

        .package-card:hover {
            transform: scale(1.03);
        }

    .card-img-top {
        object-fit: cover;
        height: 200px;
        width: 100%;
    }

    .btn-outline-primary {
        transition: all 0.2s;
    }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: #fff;
        }

    .btn-primary {
        transition: all 0.2s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }
</style>
